<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetSupermarcheSeb.Views.GestionPage"
             Title="GestionPage">
    <ScrollView>
        <StackLayout Padding="20">
            <!-- Ajout d'un nouvel Employé -->
            <Label Text="Créer un nouvel employé" FontAttributes="Bold" />
            <Entry x:Name="EntryEmployeeName" Placeholder="Nom de l'employé" />
            <Button Text="Ajouter employé" Clicked="OnAddEmployeeClicked" Margin="0,10,0,20"/>

            <!-- Ajout d'un nouveau Rayon -->
            <Label Text="Créer un nouveau rayon" FontAttributes="Bold" />
            <Entry x:Name="EntryRayonName" Placeholder="Nom du rayon" />
            <Entry x:Name="EntryRayonSectorId" Placeholder="ID du secteur (1,2,3...)" Keyboard="Numeric"/>
            <Button Text="Ajouter rayon" Clicked="OnAddRayonClicked" Margin="0,10,0,20"/>

            <!-- Ajout d'un nouveau Secteur -->
            <Label Text="Créer un nouveau secteur" FontAttributes="Bold" />
            <Entry x:Name="EntrySectorName" Placeholder="Nom du secteur" />
            <Button Text="Ajouter secteur" Clicked="OnAddSectorClicked" Margin="0,10,0,20"/>
        </StackLayout>
    </ScrollView>
</ContentPage>